
@{
    ViewData["Title"] = "Create";
}
@model Course
<div class="col-10 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic form elements</h4>
            <p class="card-description">
                Basic form elements
            </p>
            <form enctype="multipart/form-data" method="post" class="forms-sample" asp-action="Create">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price">Price</label>
                    <input asp-for="Price" class="form-control" id="exampleInputName1" placeholder="Price">
                    <span asp-validation-for="Price"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TeacherId">Teacher</label>
                   <select asp-for="TeacherId" asp-items="new SelectList(ViewBag.Teachers,nameof(Teacher.Id),nameof(Teacher.Name))"></select>
                    <span asp-validation-for="TeacherId"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile">Image</label>
                    <input asp-for="ImageFile" class="form-control" id="exampleInputName1" placeholder="ImageFile">
                    <span asp-validation-for="ImageFile"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button asp-action="Index" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>